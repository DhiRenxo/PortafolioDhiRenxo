---
export interface Props {
  text: string;
  type?: "button" | "submit" | "reset";
  variant?: "primary" | "secondary" | "outline";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
}

const {
  text,
  type = "button",
  variant = "primary",
  size = "md",
  href,
  class: className = "",
} = Astro.props;

const baseStyles = "rounded-lg font-semibold transition duration-300";
const variants = {
  primary: "bg-green-500 hover:bg-green-600 text-white",
  secondary: "bg-gray-700 hover:bg-gray-800 text-white",
  outline: "border border-green-500 text-green-500 hover:bg-green-500 hover:text-white",
};
const sizes = {
  sm: "px-3 py-1 text-sm",
  md: "px-5 py-2 text-base",
  lg: "px-6 py-3 text-lg",
};
---

{href ? (
  <a href={href} class={`${baseStyles} ${variants[variant]} ${sizes[size]} inline-block text-center ${className}`}>
    {text}
  </a>
) : (
  <button type={type} class={`${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`}>
    {text}
  </button>
)}
