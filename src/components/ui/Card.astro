---
interface Props {
  title: string;
  description: string;
  icon?: string; // SVG o Lucide React icon
  variant?: "default" | "primary" | "secondary";
}

const { title, description, icon, variant = "default" } = Astro.props;

const baseStyles = "rounded-xl p-6 shadow-lg transition duration-300";
const variants = {
  default: "bg-gray-800 text-white",
  primary: "bg-green-500 text-white",
  secondary: "bg-gray-700 text-white",
};
---

<div class={`${baseStyles} ${variants[variant]} flex flex-col items-center text-center`}>
  {icon && <div class="text-4xl mb-3">{icon}</div>}
  <h3 class="text-xl font-bold">{title}</h3>
  <p class="text-gray-300">{description}</p>
</div>
