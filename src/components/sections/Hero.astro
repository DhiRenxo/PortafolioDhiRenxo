---
const name = "Chayanne Meza Iriarte";
const description = "Soy un desarrollador fullstack especializado en Astro, Vue y Node.js.";
const ctaText = "Ver Proyectos";
const ctaLink = "/projects";
---

<style>
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease-out forwards;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Efecto de escritura */
  .typing {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    border-right: 3px solid greenyellow; /* Cursor */
    animation: typing 4s steps(20, end) forwards, blink 0.75s infinite alternate;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes blink {
    from { border-color: greenyellow; }
    to { border-color: transparent; }
  }

  .glow:hover {
    box-shadow: 0 0 15px rgba(34, 197, 94, 0.6);
  }

  .hero-img {
    animation: float 4s ease-in-out infinite;
  }

  @keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0); }
  }
</style>

<section class="relative bg-gray-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-1 flex flex-col md:flex-row items-center text-center md:text-left">
    <!-- Contenido -->
    <div class="md:w-1/2 fade-in">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        Â¡Hola! Soy <span class="text-green-400 typing">{name}</span>
      </h1>
      <p class="text-lg text-gray-300 mb-6">
        {description}
      </p>
      <a href={ctaLink} class="bg-green-400 text-black px-6 py-3 rounded-lg font-semibold hover:bg-green-500 transition glow">
        {ctaText}
      </a>
    </div>

    <!-- Imagen con Lazy Loading -->
    <div class="md:w-1/2 mt-10 md:mt-0 flex justify-center">
      <img 
        src="/assets/hero-image.jpg" 
        alt="Foto de {name}" 
        class="w-64 h-64 rounded-full border-4 border-green-400 shadow-lg hero-img"
        loading="lazy" 
        decoding="async"
      />
    </div>
  </div>
</section>
